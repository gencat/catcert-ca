#!/bin/sh

set -e

case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Recreate the /usr/share/ca-certificates/catcert directory
        # Removal of ca-certificates-catcert removes this directory if empty.
        if [ ! -e /usr/share/ca-certificates/catcert ]; then
            if mkdir /usr/share/ca-certificates/catcert 2>/dev/null; then
                chown root:staff /usr/share/ca-certificates/catcert
                chmod 2775 /usr/share/ca-certificates/catcert
            fi
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
